<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackathonbark.com.cookie.Setting2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/w7"/>

    <EditText
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_x="230px"
        android:layout_y="800px"
        android:id="@+id/editText_hour"
        android:textSize="20pt"
        android:text=""
        android:background="@android:color/transparent"/>

    <EditText
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_x="600px"
        android:layout_y="800px"
        android:id="@+id/editText_minute"
        android:textSize="20pt"
        android:text=""
        android:background="@android:color/transparent"/>


    <Button
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_x="800px"
        android:layout_y="1400px"

        android:id="@+id/btnCheck"
        android:background="@android:color/darker_gray"
        style="@style/Widget.AppCompat.Button.Borderless" />

</AbsoluteLayout>
