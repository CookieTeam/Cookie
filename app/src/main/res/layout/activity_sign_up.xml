<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackathonbark.com.cookie.SignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/f4"/>

    <EditText
        android:id="@+id/edittext_id"
        android:layout_width="500px"
        android:layout_height="110px"
        android:layout_x = "500px"
        android:layout_y = "500px"
        android:textSize = "13pt"
        android:background="@color/test"
        android:textColor="@android:color/white"
        />


    <EditText
        android:id="@+id/edittext_pw"
        android:layout_width="500px"
        android:layout_height="110px"
        android:layout_x = "500px"
        android:layout_y = "700px"
        android:textSize = "13pt"
        android:inputType="textPassword"
        android:background="@color/test"
        android:textColor="@android:color/white"

        />

    <Button
        android:id="@+id/btnMan"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_x="480px"
        android:layout_y="920px"
        android:background="@color/test"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:id="@+id/btnWoman"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_x="620px"
        android:layout_y="920px"
        android:background="@color/test"
        style="@style/Widget.AppCompat.Button.Borderless" />


    <EditText
        android:id="@+id/edittext_age"
        android:layout_width="500px"
        android:layout_height="110px"
        android:layout_x = "500px"
        android:layout_y = "1080px"
        android:textSize = "13pt"
        android:background="@color/test"
        android:textColor="@android:color/white"
        />

    <Button
        android:layout_width="630px"
        android:layout_height="140px"
        android:layout_x="240px"
        android:layout_y="1410px"

        android:id="@+id/btnLogin"
        android:background="@color/test"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_x="302dp"
        android:layout_y="10dp"

        android:id="@+id/btnSignUpExit"
        android:background="@color/test"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="12dp"

        android:id="@+id/btnSignUpBack"
        android:background="@color/test"
        style="@style/Widget.AppCompat.Button.Borderless" />
</AbsoluteLayout>
