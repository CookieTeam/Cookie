<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hackathonbark.com.cookie.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/final-03"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="@android:color/black" />

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="650px"
        android:layout_height="110px"
        android:layout_x = "230px"
        android:layout_y = "760px"
        android:textSize = "13pt"
        android:background="@null"
        android:textColor="@android:color/white"
        />

    <EditText
        android:id="@+id/editText_pw"
        android:layout_width="650px"
        android:layout_height="110px"
        android:layout_x = "230px"
        android:layout_y = "860px"
        android:textSize = "13pt"
        android:inputType="textPassword"
        android:background="@null"
        android:textColor="@android:color/white"
        />


    <Button
        android:layout_width="600px"
        android:layout_height="140px"
        android:layout_x="260px"
        android:layout_y="1190px"

        android:id="@+id/btnLogin"
        android:background="@android:color/transparent"
        style="@style/Widget.AppCompat.Button.Borderless" />


    <Button
        android:layout_width="500px"
        android:layout_height="90px"
        android:layout_x="310px"
        android:layout_y="1365px"

        android:id="@+id/btnSignUp"
        android:background="@android:color/transparent"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_x="305px"
        android:layout_y="1530px"

        android:id="@+id/btnFacebook"
        android:background="@android:color/transparent"
        style="@style/Widget.AppCompat.Button.Borderless" />
</AbsoluteLayout>
